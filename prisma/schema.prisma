generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id         Int      @id @default(autoincrement())
  date       String
  name       String
  address    String
  phone      String   @db.VarChar
  createdAt  DateTime @default(now())
  invoice_id String
  amount     Decimal
  Item       Item[]
}

model Item {
  id          Int     @id @default(autoincrement())
  description String
  rate        Decimal
  quantity    Int
  amount      Decimal
  invoiceId   Int
  Invoice     Invoice @relation(fields: [invoiceId], references: [id])
}
